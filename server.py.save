import socket
import subprocess

def start_server(server_socket):
	conn, addr = server_socket.accept()
	print("COnnection ACCEPTED")
	while True:
		data = conn.recv(1024).decode()
		if not data:
			break
		print(f"Received command: {data}")
		process = subprocess.Popen(list(data.split(" ")), stdin=subprocess.PIPE, stdout=subprocess.PIPE, stderr=subprocess.PIPE);
		out, err = process.communicate(input='rajesh@2003'.encode())
		conn.send(out)
	conn.close()

if __name__ == '__main__':
	host = '192.168.124.158'
	port = 65432
	server = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
	server.bind((host, port))
	server.listen(3)
	start_server(server)

